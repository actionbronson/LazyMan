<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.lazyman.nhl.tv" name="LazyMan NHL.tv" version="1.2.0" provider-name="lazyman">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" version="2.22.0"/>
    <import addon="script.module.pytz" version="2014.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>LazyMan NHL.tv</summary>
    <description>An application that helps you watch free NHL and MLB games</description>
    <forum>https://www.reddit.com/r/LazyMan</forum>
    <source>https://github.com/actionbronson/LazyMan</source>
    <license>GPL-2.0</license>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
    <news>v1.2.0  (2019-12-01)
      - Python3 Support for kodi matrix
    </news>
    <reuselanguageinvoker>true</reuselanguageinvoker>
  </extension>
</addon>
